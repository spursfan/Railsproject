<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<% @posts.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |posts| %>
      <div class="col-md-4">
        <%= image_tag posts.picture_url, width: '100%' if posts.picture.present?%>
        <h4><%= link_to posts.name, posts %></h4>
        <%= posts.description %>
      </div>
    <% end %>
  </div>
<% end %>
<br>

<%= link_to 'New Post', new_post_path %>
